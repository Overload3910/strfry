<div class="user">
    <div> ?(!ctx.kind0Found())
        No metadata event found for $(ctx.npubId)
    </div>

    <table> ?(ctx.kind0Found())
        <tr>
            <th>npub</th>
            <td><pre>$(ctx.npubId)</pre></td>
        </tr>

        <tr>
            <th>$(field)</th>
            <td><pre>$(ctx.getMeta(field))</pre></td>
        </tr> @(const auto &field : { "name", "about" })

        <>
            <tr>
                <th>$(field)</th>
                <td><pre>$(ctx.getMeta(field))</pre></td>
            </tr> ?(field != "name" && field != "about")
        </> @(const auto &[field, v] : ctx.kind0Json->get_object())

    </table>

    <div>
        <a href="/u/$(ctx.npubId)/notes">Notes</a>
    </div>

    <div>
        <a href="/u/$(ctx.npubId)/follows">Follows</a>
    </div>
</div>
